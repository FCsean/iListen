<% if @song.errors.any? %>
<div class="error_messages">
  <h2>Form is invalid</h2>
  <ul>
    <% for message in @song.errors.full_messages %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<h1>Upload</h1>
<%= form_for @song, :url => songs_path, :html => { :multipart => true } do |form| %>
  <%= form.file_field :song %>
  <p>
    <%= form.label :title %><br />
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :artist %><br />
    <%= form.text_field :artist %>
  </p>
  <p>
    <%= form.submit 'Upload' %>
  </p>
<% end %>