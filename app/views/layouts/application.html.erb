<!DOCTYPE html>
<html>
<head>
  <title>iListen</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag params[:controller] %> 
  <%= javascript_include_tag "application.js" %> 
</head>
<body>

<!--Top Bar-->
<div id="topBar">
  <a href="/" style="text-decoration:none;">
    <p class="iListen">iListen</p>
    <p class="iListenSubtext">Let the tunes follow you.</p>
  </a>
  <div id="user_nav">
  <% if current_user %>

  	<div id="loginID">
    Logged in as <%= current_user.username %>.
	   </div>

	<div id="options">
	<a class="menu" onclick="redirect('')">Songs</a>
	<a class="menu" onclick="redirect('playlists')">Playlists</a>
    <a class="menu" onclick="redirect('upload')">Upload</a>
	<%= link_to "Log out", logout_path, :class => "menu" %>
	</div>
  <% end %>

</div>

</div>
<!--Top Bar Grey Area-->
<div id="topBarBlack">
</div>

<%= include_gon %>

<%= yield %>

</body>
</html>
