<!DOCTYPE html>
<html>
<head>
  <title>iListen</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!--Top Bar-->
<div id="topBar">
  <p class="iListen">iListen</p>
  <p class="iListenSubtext">Let the tunes follow you.</p>

  <div id="user_nav">
  <% if current_user %>

  	<div id="loginID">
    Logged in as <%= current_user.username %>.
	</div>

	<div id="options">
	<a class="menu" href="/">Songs</a>
	<a class="menu" href="/playlists">Playlists</a>
    <a class="menu" href="/upload">Upload</a>
	<%= link_to "Log out", logout_path, :class => "menu" %>
	</div>
  <% end %>

</div>

</div>
<!--Top Bar Grey Area-->
<div id="topBarBlack">
</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%= include_gon %>

<%= yield %>

</body>
</html>
