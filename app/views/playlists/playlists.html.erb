<h1>Create a Playlist</h1>

<%= form_for @playlist do |f| %>
  <% if @playlist.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @playlist.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p class="button"><%= f.submit %></p>
<% end %>

<% if @playlists.to_a.length == 0 %>
  <h1>No playlists yet.</h1>
<% else %>
<h1>Playlists:</h1>
<% @playlists.each do |p| %>
  <div>
  <a class="playlist" onclick="redirect('<%= p.name %>')"> <%= p.name %> </a>
  </div>
<% end %>
<% end %>
